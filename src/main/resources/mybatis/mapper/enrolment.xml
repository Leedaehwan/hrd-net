<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="en">
<!-- 수강 신청 기능 -->
<insert id="add" parameterType="api.vo.EnrolVO">
	INSERT INTO enrolment(e_company,e_trname,e_trid,e_email,e_uid,e_uname,e_ugen,e_uphone,e_ubday)
	VALUES (#{e_company},#{e_trname},#{e_trid},#{e_email},#{e_uid},#{e_uname},#{e_ugen},#{e_uphone},#{e_ubday})
</insert>

<select id="check" parameterType="String" resultType="Integer">
	SELECT COUNT(*)	FROM  enrolment
	WHERE e_uid = #{no}
</select>

<!-- 같은 수강 신청 막는기능 -->
<select id="checkId" parameterType="String" resultType="Integer">
	SELECT COUNT(*) FROM enrolment
	WHERE e_trid = #{no}
</select>

<!-- 회사가 수강신청한 인원들 반환기능 -->
<select id="getList" parameterType="String" resultType="api.vo.EnrolVO">
	SELECT * FROM enrolment
	WHERE e_company = #{no}
</select>

<select id="getuserList" parameterType="String" resultType="api.vo.EnrolVO">
	SELECT * FROM enrolment
	WHERE e_uid = #{no}
</select>

</mapper>

